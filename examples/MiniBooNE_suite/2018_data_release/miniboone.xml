<?xml version="1.0" ?>

<mode name="nu" />
<detector name="MiniBooNE" />

<channel name="nue" unit ="GeV">
    <bins 
		edges="0.2 0.3 0.375 0.475 0.55  0.675  0.8  0.95  1.1 1.3  1.5 3.0"
		/>
	<subchannel name="fullosc" osc="21" />
	<subchannel name="intrinsic" osc="0" />
</channel>

<channel name="numu" unit="GeV">
	<bins
		edges ="0 0.500 0.700 0.900 1.100 1.300 1.500 1.700 1.900"
		/>
	<subchannel name="intrinsic" osc="0" />
</channel>


<MultisimFile treename="events" filename="MiniBooNE_fullosc_2018.root" scale = "1.0" > 
     <branch
         name="reco_energy"
         type="double"
         associated_subchannel="nu_MiniBooNE_nue_fullosc"
    	 oscillate = "true"
         true_param_name = "true_energy"
         true_L_name = "true_baseline"
         additional_weight="pot_weight"
         />
 </MultisimFile>
 
 <MultisimFile treename="events" filename="MiniBooNE_nuebkg_2018.root" scale = "1.0" > 
     <branch
         name="reco_energy"
         type="double"
         associated_subchannel="nu_MiniBooNE_nue_intrinsic"
    	 oscillate = "true"
         true_param_name = "true_energy"
         true_L_name = "true_baseline"
         additional_weight="pot_weight"
         />
 </MultisimFile>

<MultisimFile treename="events" filename="MiniBooNE_numu_2018.root" scale = "1.0" > 
     <branch
         name="reco_energy"
         type="double"
         associated_subchannel="nu_MiniBooNE_numu_intrinsic"
    	 oscillate = "true"
         true_param_name = "true_energy"
         true_L_name = "true_baseline"
         additional_weight="pot_weight"
         />
 </MultisimFile>




